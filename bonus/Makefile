SHELL := /bin/bash

# Цвета для вывода (ANSI Escape Codes)
GREEN=\033[0;32m
YELLOW=\033[1;33m
RED=\033[0;31m
NC=\033[0m

# ~~~ ПЕРЕМЕННЫЕ ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
DOCKER_BIN        := /usr/local/bin/docker
DOCKER   := docker

# ~~~ ПРАВИЛА ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
all: setup check
	@echo -e "$(GREEN)All components installed and checked!$(NC)"